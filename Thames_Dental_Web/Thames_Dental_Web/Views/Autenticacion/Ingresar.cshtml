@model UsuarioModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout_None.cshtml";
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card">
                <div class="card-body">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center">
                        <a href="/" class="app-brand-link gap-2">
                            <span class="app-brand-text demo text-body">Thames <span class="fw-bolder">Dental</span></span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    <h4 class="mb-2">Iniciar sesión!</h4>

                    @if (ViewBag.Mensaje != null)
                    {
                        <div class="alert alert-danger text-center">@ViewBag.Mensaje</div>
                    }

                    @using (Html.BeginForm("Ingresar", "Autenticacion"))
                    {
                        <div class="mb-3">
                            <label for="Email" class="form-label">Correo electrónico</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "Email", 
                                type = "email", @placeholder = "Introduzca su correo electrónico", @required = "required", @autofocus = "autofocus" }
                            )
                        </div>

                        <div class="mb-3 form-password-toggle">
                            <div class="d-flex justify-content-between">
                                <label class="form-label" for="password">Contraseña</label>
                                <a href="@Url.Action("RecuperarContrasena", "Autenticacion")">
                                    <small>¿Olvidó su contraseña?</small>
                                </a>
                            </div>
                            <div class="input-group input-group-merge">
                                @Html.TextBoxFor(m => m.Contrasena, new
                                    {
                                        @class = "form-control",
                                        @id = "Contrasena",
                                        type = "password",
                                        @placeholder = "Introduzca su contraseña",
                                        @aria_describedby = "password",
                                        @required = "required"
                                    }
                                )
                                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                            </div>
                        </div>
                        @*<div class="mb-3">
                        <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="remember-me" />
                        <label class="form-check-label" for="remember-me"> Remember Me </label>
                        </div>
                        </div>*@
                        <div class="mb-3">
                            <input type="submit" class="btn btn-primary d-grid w-100" value="Iniciar sesión">
                        </div>
                    }

                    <p class="text-center">
                        <span>¿Es nuevo en nuestra plataforma?</span>
                        <a href="@Url.Action("Registrar", "Autenticacion")">
                            <span>Regístrate</span>
                        </a>
                    </p>
                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>
