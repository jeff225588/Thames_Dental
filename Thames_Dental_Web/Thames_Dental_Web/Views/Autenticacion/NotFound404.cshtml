@{
    Layout = "~/Views/Shared/_Layout_None.cshtml";
    ViewData["Title"] = "Page Not Found";
}

<div class="container-xxl container-p-y">
    <div class="misc-wrapper">
        <h2 class="mb-2 mx-2">Página No Encontrada :(</h2>
        <p class="mb-4 mx-2">¡Ups! 😖 La URL solicitada no se encontró en este servidor.</p>
        <div>
            <a class="btn btn-primary m-1" asp-controller="Pages" asp-action="Index">Ir a Inicio</a>
            <button class="btn btn-outline-primary m-1" onclick="goBack()">Volver</button>
        </div>
        <div class="mt-3">
            <img src="~/img/page-misc-error-light.png"
                 alt="page-misc-error-light"
                 width="500"
                 class="img-fluid"
                 data-app-dark-img="illustrations/page-misc-error-dark.png"
                 data-app-light-img="illustrations/page-misc-error-light.png" />
        </div>
    </div>
</div>


<!-- JavaScript to go back to the previous page -->
<script>
    function goBack() {
        window.history.back();
    }
</script>
