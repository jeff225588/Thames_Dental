@model Thames_Dental_Web.Models.Nota

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Agregar Nota";
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Nota</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .btn-primary {
            background-color: #52ab98; /* Color primario */
        }

        .btn-secondary {
            background-color: #2b6777; /* Color del botón de salir */
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2 class="text-primary">Agregar Nota</h2>

        <!-- Formulario para agregar notas -->
        <form method="post" action="@Url.Action("AgregarNotaporid", "Expedientes")">
            <div class="form-group">
                <input type="hidden" name="ClienteID" value="@Model.ClienteID" />
                <label for="notaFecha">Fecha</label>
                <input type="date" class="form-control" name="Fecha" required>
            </div>
            <div class="form-group">
                <label for="notaDetalle">Detalle de la nota</label>
                <textarea class="form-control" name="Detalle" rows="4" required></textarea>
            </div>

            <!-- Contenedor para los botones (Agregar Nota y Salir) alineados a la par -->
            <div class="d-flex justify-content-between mt-4">
                <button type="submit" class="btn btn-primary">Agregar Nota</button>
                <button class="btn btn-secondary" onclick="location.href='@Url.Action("VerCliente", "Expedientes", new { clienteID = Model.ClienteID })'">Salir</button>
            </div>
        </form>
    </div>

    <!-- Scripts necesarios -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
