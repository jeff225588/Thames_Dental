@model Thames_Dental_Web.Models.ClientModel


@{

    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Expediente del Cliente";
}


<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4" style="color: #008cba;">Editar Expediente del Cliente</h2>
    <form asp-controller="Expedientes" asp-action="EditarExpediente" method="post">
        <input type="hidden" asp-for="ClienteID" />

        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="PrimerApellido" class="form-label">Primer Apellido</label>
                <input asp-for="PrimerApellido" class="form-control" placeholder="Primer Apellido" />
                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="SegundoApellido" class="form-label">Segundo Apellido</label>
                <input asp-for="SegundoApellido" class="form-control" placeholder="Segundo Apellido" />
                <span asp-validation-for="SegundoApellido" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="TipoIdentificacion" class="form-label">Tipo de Identificación</label>
                <select asp-for="TipoIdentificacion" class="form-select">
                    <option value="">Seleccione...</option>
                    <option value="Físico">Físico</option>
                    <option value="Jurídico">Jurídico</option>
                </select>
                <span asp-validation-for="TipoIdentificacion" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Identificacion" class="form-label">Identificación</label>
                <input asp-for="Identificacion" class="form-control" placeholder="Número de Identificación" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="TelefonoPrincipal" class="form-label">Teléfono Principal</label>
                <input asp-for="TelefonoPrincipal" class="form-control" placeholder="Teléfono Principal" />
                <span asp-validation-for="TelefonoPrincipal" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="CorreoElectronico" class="form-label">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" class="form-control" placeholder="Correo Electrónico" />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Pais" class="form-label">País</label>
                <select asp-for="Pais" class="form-select">
                    <option value="Costa Rica">Costa Rica</option>
                    <option value="Otro">Otro</option>
                </select>
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Ciudad" class="form-label">Ciudad</label>
                <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12 mb-3">
            <label for="DireccionExacta" class="form-label">Dirección Exacta</label>
            <input asp-for="DireccionExacta" class="form-control" placeholder="Dirección Exacta" />
            <span asp-validation-for="DireccionExacta" class="text-danger"></span>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Genero" class="form-label">Género</label>
                <select asp-for="Genero" class="form-select">
                    <option value="Indefinido">Indefinido</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Ocupacion" class="form-label">Ocupación</label>
                <input asp-for="Ocupacion" class="form-control" placeholder="Ocupación" />
                <span asp-validation-for="Ocupacion" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label for="ContactoEmergencia" class="form-label">Contacto de Emergencia</label>
                <input asp-for="ContactoEmergencia" class="form-control" placeholder="Contacto de Emergencia" />
                <span asp-validation-for="ContactoEmergencia" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="TelefonoEmergencia" class="form-label">Teléfono Contacto Emergencia</label>
                <input asp-for="TelefonoEmergencia" class="form-control" placeholder="Teléfono Contacto Emergencia" />
                <span asp-validation-for="TelefonoEmergencia" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control" type="date" />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="Notas" class="form-label">Notas</label>
                <textarea asp-for="Notas" class="form-control" rows="3" placeholder="Notas adicionales"></textarea>
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" style="background-color: #008cba; border-color: #008cba;">Guardar Cambios</button>
            <button class="btn btn-secondary" onclick="location.href='@Url.Action("VerCliente", "Expedientes", new { clienteID = Model.ClienteID })'">Salir</button>
        </div>
    </form>
</div>
