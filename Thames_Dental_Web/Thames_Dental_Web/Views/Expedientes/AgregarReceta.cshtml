@model Thames_Dental_Web.Models.RecetaRequest

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Recetario";
}

<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recetario</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Estilos personalizados */
        body {
            background-color: #f7f7f7;
        }

        .container {
            background-color: white;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h2 {
            color: #2b6777; /* Color del encabezado */
        }

        .btn-primary {
            background-color: #52ab98; /* Color secundario */
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h2>Agregar Receta</h2>

        <!-- Formulario para agregar recetas -->
        <form method="post" action="@Url.Action("AgregarReceta", "Expedientes")">
            <div class="form-group">
                <label for="Paciente">Paciente</label>
                <input type="text" class="form-control" name="Identificacion" required />
            </div>
            <div class="form-group">
                <label for="Medicamento">Medicamentos</label>
                <textarea class="form-control" name="Medicamento" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <label for="Instrucciones">Instrucciones</label>
                <input type="text" class="form-control" name="Instrucciones" required />
            </div>
            <button type="submit" class="btn btn-primary">Agregar Receta</button>
        </form>
    </div>

    <!-- Scripts necesarios -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        // Función para mostrar una alerta de éxito al agregar la receta
        $(document).ready(function () {
            $('form').on('submit', function () {
                Swal.fire({
                    title: 'Receta agregada',
                    text: 'La receta ha sido agregada con éxito.',
                    icon: 'success',
                    showConfirmButton: false,
                    timer: 2000
                });
            });
        });
    </script>
</body>
</html>
