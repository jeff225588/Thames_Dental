@model Receta


@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Recetario";
}


<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anotaciones</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Estilos personalizados */
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f2f2f2;
        }

        thead.thead-dark {
            background-color: #2b6777; /* Color primario */
            color: white;
        }

        .btn-primary {
            background-color: #52ab98; /* Color secundario */
        }

        .btn-secondary {
            background-color: #2b6777;
        }

        .btn-danger {
            background-color: #d9534f;
        }
    </style>
</head>
<body>

    <div class="container mt-4">
        <h2 class="text-primary">Recetas</h2>

        <!-- Formulario para agregar notas -->
        <form method="post" action="@Url.Action("Recetario", "Expedientes")">
            <!-- Cambia "TuControlador" por el nombre de tu controlador -->
            <div class="form-group">
                <label for="Paciente">Paciente</label>
                <textarea class="form-control" name="Paciente" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <label for="Medicamento">Medicamentos</label>
                <textarea class="form-control" name="Medicamento" rows="4" required></textarea>
            </div>
            <div class="form-group">
                <label for="Instrucciones">Instrucciones</label>
                <input type="text" class="form-control" name="Instrucciones" required>
            </div>
            <button type="submit" class="btn btn-primary">Agregar Receta</button>
        </form>

        <table class="table table-striped mt-4">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Paciente</th>
                    <th>Medicamentos</th>
                    <th>Instrucciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @* Aquí puedes agregar lógica para mostrar las notas si lo deseas, pero está vacío para ti *@
            </tbody>
        </table>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="notaModal" tabindex="-1" aria-labelledby="modalTitle" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="recetaForm">
                        <div class="form-group">
                            <label for="Paciente">Paciente</label>
                            <input type="text" class="form-control" id="Paciente" readonly>
                        </div>
                        <div class="form-group">
                            <label for="Medicamento">Medicamentos</label>
                            <textarea class="form-control" id="Medicamento" rows="4" readonly></textarea>
                        </div>
                        <div class="form-group">
                            <label for="InstruccionesModal">Instrucciones</label>
                            <input type="text" class="form-control" id="InstruccionesModal" readonly>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary" id="editButton" style="display:none;">Guardar Cambios</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts necesarios -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <script>
        // Función para abrir el modal con los detalles
        function showModal(action, paciente, madicamentos, instrucciones) {
            $('#modalTitle').text(action + ' Detalle de la Receta');
            $('#Paciente').val(Paciente);
            $('#Medicamento').val(Medicamento);
            $('#InstruccionesModal').val(Instrucciones);

            if (action === 'Editar') {
                $('#Medicamento').prop('readonly', false); // Hacer editable
                $('#editButton').show(); // Mostrar botón de guardar
            } else {
                $('#Medicamento').prop('readonly', true); // Solo lectura
                $('#editButton').hide(); // Ocultar botón de guardar
            }

            $('#notaModal').modal('show');
        }

        // Función para eliminar una receta con animación de éxito
        function eliminarReceta(Paciente) {
            Swal.fire({
                title: 'Receta eliminada',
                text: `La receta para el ${Paciente} ha sido eliminada con éxito.`,
                icon: 'success',
                showConfirmButton: false,
                timer: 2000
            });
        }
    </script>
</body>
</html>
