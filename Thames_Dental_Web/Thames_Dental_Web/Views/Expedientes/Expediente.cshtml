@model Thames_Dental_Web.Models.ClientModel
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Expediente del Cliente";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4" style="color: #008cba;">Expediente del Cliente</h2>
    <form id="expedienteForm" asp-action="Expediente" method="post">
        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="Nombre" class="form-label">Nombre</label>
                <input asp-for="Nombre" class="form-control" id="Nombre" placeholder="Nombre" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" required />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="PrimerApellido" class="form-label">Primer Apellido</label>
                <input asp-for="PrimerApellido" class="form-control" id="PrimerApellido" placeholder="Primer Apellido" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" required />
                <span asp-validation-for="PrimerApellido" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="SegundoApellido" class="form-label">Segundo Apellido</label>
                <input asp-for="SegundoApellido" class="form-control" id="SegundoApellido" placeholder="Segundo Apellido" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" required />
                <span asp-validation-for="SegundoApellido" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="TipoIdentificacion" class="form-label">Tipo de Identificación</label>
                <select asp-for="TipoIdentificacion" class="form-select" id="TipoIdentificacion" required>
                    <option value="">Seleccione...</option>
                    <option value="Físico">Físico</option>
                    <option value="Jurídico">Jurídico</option>
                </select>
                <span asp-validation-for="TipoIdentificacion" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Identificacion" class="form-label">Identificación</label>
                <input asp-for="Identificacion" class="form-control" id="Identificacion" placeholder="Número de Identificación" required />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="TelefonoPrincipal" class="form-label">Teléfono Principal</label>
                <input asp-for="TelefonoPrincipal" class="form-control" id="TelefonoPrincipal" placeholder="Teléfono Principal" pattern="^\d{8}$" required />
                <span asp-validation-for="TelefonoPrincipal" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="Correo" class="form-label">Correo Electrónico</label>
                <input asp-for="CorreoElectronico" class="form-control" placeholder="Correo Electrónico" type="email" required />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Pais" class="form-label">País</label>
                <select asp-for="Pais" class="form-select" required>
                    <option value="Costa Rica">Costa Rica</option>
                    <option value="Otro">Otro</option>
                </select>
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Ciudad" class="form-label">Ciudad</label>
                <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" required />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
        </div>

        <div class="col-md-12">
            <label for="DireccionExacta" class="form-label">Dirección Exacta</label>
            <input asp-for="DireccionExacta" class="form-control" placeholder="Dirección Exacta" required />
            <span asp-validation-for="DireccionExacta" class="text-danger"></span>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-4">
                <label for="FechaNacimiento" class="form-label">Fecha de Nacimiento</label>
                <input asp-for="FechaNacimiento" class="form-control" type="date" max="2025-12-31" required />
                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Genero" class="form-label">Género</label>
                <select asp-for="Genero" class="form-select" required>
                    <option value="Indefinido">Indefinido</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                </select>
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label for="Ocupacion" class="form-label">Ocupación</label>
                <input asp-for="Ocupacion" class="form-control" placeholder="Ocupación" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" required />
                <span asp-validation-for="Ocupacion" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label for="ContactoEmergencia" class="form-label">Contacto de Emergencia</label>
                <input asp-for="ContactoEmergencia" class="form-control" placeholder="Contacto de Emergencia" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" required />
                <span asp-validation-for="ContactoEmergencia" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="TelefonoEmergencia" class="form-label">Teléfono Contacto Emergencia</label>
                <input asp-for="TelefonoEmergencia" class="form-control" placeholder="Teléfono Contacto Emergencia" pattern="^\d{8}$" required />
                <span asp-validation-for="TelefonoEmergencia" class="text-danger"></span>
            </div>
        </div>

        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                <input asp-for="FechaIngreso" class="form-control" type="date" required />
                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label for="Notas" class="form-label">Notas</label>
                <textarea asp-for="Notas" class="form-control" rows="3" placeholder="Notas adicionales" required></textarea>
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" style="background-color: #008cba; border-color: #008cba;">
                Guardar
            </button>
        </div>
    </form>
</div>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById("expedienteForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Evita el envío predeterminado

            let form = this;
            let formData = new FormData(form);
            let submitButton = form.querySelector("button[type='submit']");
            submitButton.disabled = true; // Deshabilita el botón mientras se procesa

            fetch(form.action, {
                method: "POST",
                body: formData
            })
                .then(response => {
                    let contentType = response.headers.get("content-type");
                    if (!response.ok) {
                        throw new Error("Error al guardar el expediente.");
                    }
                    if (contentType && contentType.includes("application/json")) {
                        return response.json();
                    } else {
                        return response.text(); // En caso de respuesta HTML
                    }
                })
                .then(data => {
                    Swal.fire({
                        title: "¡Éxito!",
                        text: "El expediente se ha guardado correctamente.",
                        icon: "success",
                        confirmButtonText: "Aceptar"
                    }).then(() => {
                        form.reset(); // Limpia el formulario
                        window.location.reload(); // Recarga la página o redirige si es necesario
                    });
                })
                .catch(error => {
                    Swal.fire({
                        title: "Error",
                        text: "Hubo un problema al guardar el expediente.",
                        icon: "error",
                        confirmButtonText: "Aceptar"
                    });
                })
                .finally(() => {
                    submitButton.disabled = false; // Rehabilita el botón después del proceso
                });
        });
    });
</script>
