@model Thames_Dental_Web.Models.Autorizado
@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Autorizado";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center mb-4" style="color: #008cba;">Agregar Autorizado</h2>
    <p class="text-center">Ingrese los datos del autorizado.</p>

    <form asp-action="Autorizados" method="post">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead class="table-light">
                    <tr>
                        <th>Cédula</th>
                        <th>Nombre</th>
                        <th>Teléfono de Emergencia</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input name="Cedula" class="form-control" placeholder="Cédula" />
                        </td>
                        <td>
                            <input name="Nombre" class="form-control" placeholder="Nombre" />
                        </td>
                        <td>
                            <input name="TelefonoEmergencia" class="form-control" placeholder="Teléfono de Emergencia" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-primary" style="background-color: #008cba; border-color: #008cba;">Guardar</button>
        </div>
    </form>
</div>
