@model List<Thames_Dental_Web.Models.CotizacionModel>

@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Cotizaciones del Cliente";
}

<h2 class="text-center">Cotizaciones del Cliente</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-warning text-center">@ViewBag.Message</div>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
}

<div class="container">
    @if (Model != null && Model.Count > 0)
    {
        <h3 class="text-center">Cotizaciones encontradas:</h3>
        <div class="row">
            @foreach (var cotizacion in Model)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Cotización</h5>
                            <p class="card-text">@cotizacion.TextoCotizacion</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            No se encontraron cotizaciones para este cliente. ¿Deseas agregar una nueva?
        </div>
    }

    <div class="d-flex justify-content-center mt-3">
        <button class="btn btn-primary" onclick="location.href='@Url.Action("AgregarCotizacion", "Expedientes", new { clienteID = Model != null && Model.Count > 0 ? Model[0].ClienteID : ViewBag.ClienteID })'">
            Agregar Cotización
        </button>
        <button class="btn btn-secondary" onclick="window.history.back();">Salir</button>
    </div>
</div>
